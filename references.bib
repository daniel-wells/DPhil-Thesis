  date = {2008-12},
  pages = {718-726},
  author = {Mulligan, Peter and Westbrook, Thomas F and Ottinger, Matthias and Pavlova, Natalya and Chang, Bin and Macia, Eric and Shi, Yu-Jiang and Barretina, Jordi and Liu, Jinsong and Howley, Peter M and Elledge, Stephen J and Shi, Yang},
  pmc = {PMC6595072},
  eprinttype = {pmid},
  eprint = {19061646}
}

