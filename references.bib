  author = {Moens, Peter B and Kolas, Nadine K and Tarsounas, Madalena and Marcon, Edyta and Cohen, Paula E and Spyropoulos, Barbara},
  eprinttype = {pmid},
  eprint = {11950880}
}

@article{Allen1976vivo,
