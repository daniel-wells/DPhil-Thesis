@article{Hong2001Saccharomyces,
  langid = {english},
  title = {Saccharomyces Cerevisiae {{Dmc1}} Protein Promotes Renaturation of Single-Strand {{DNA}} ({{ssDNA}}) and Assimilation of {{ssDNA}} into Homologous Super-Coiled Duplex {{DNA}}},
