@inproceedings{Carroll2016Abstract,
  title = {Abstract {{PR12}}: {{Transcriptional}} Regulation of Metabolism by {{MLX}} and Its Binding Partners Is Essential for Tumor Cell Survival and Spermatogenesis},
  volume = {14},
