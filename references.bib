@article{Petronczki2003Menage,
  langid = {english},
  title = {Un {{Ménage}} à {{Quatre}}: {{The Molecular Biology}} of {{Chromosome Segregation}} in {{Meiosis}}},
  volume = {112},
  issn = {0092-8674},
  url = {http://www.sciencedirect.com/science/article/pii/S0092867403000837},
  doi = {10.1016/S0092-8674(03)00083-7},
  shorttitle = {Un {{Ménage}} à {{Quatre}}},
